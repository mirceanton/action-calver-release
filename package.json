{
  "name": "action-calver-release",
  "version": "1.0.0",
  "description": "GitHub Action to creates new releases using Calendar Versioning (CalVer)",
  "type": "module",
  "main": "dist/index.js",
  "author": "Mircea-Pavel Anton",
  "license": "MIT",
  "keywords": [
    "github-actions",
    "calver",
    "release",
    "versioning"
  ],
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/github": "9.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.2",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.13.0",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "prettier": "3.8.1"
  }
}
